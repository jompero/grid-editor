{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["dom", "ES6"],
        "paths": {
            "@/*": [
              "./*"
            ]
          },                                                                                                                                                                                 
        "types": ["node"] 
    },
    "exclude": [
        "node_modules",
        "dist"
      ],
    "include": [
        "./src/**/*", "babel.config.js"
    ]
}